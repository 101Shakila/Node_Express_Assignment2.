<%- include('../layout', { title: 'g2' }) %>

    <section class="center-content">
        <h1>G2 PAGE</h1>
        <div class="border border-4 p-4">
            <form action="/g2" method="POST">
                <div class="mb-4">
                    <h2 id="content-title">Personal Information</h2>
                    <div class="col-md-6">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" id="firstName" name="firstName" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" id="lastName" name="lastName" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="licenseNumber" class="form-label">License Number</label>
                        <input type="number" id="licenseNumber" name="licenseNumber" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="age" class="form-label">Age</label>
                        <input type="number" id="age" name="age" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="dob" class="form-label">DOB</label>
                        <input type="date" id="dob" name="dob" class="form-control">
                    </div>
                </div>


                <div class="mb-4">
                    <h2 id="content-title">Car Information</h2>
                    <div class="col-md-6">
                        <label for="make" class="form-label">Make</label>
                        <input type="text" id="make" name="make" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="model" class="form-label">Model</label>
                        <input type="text" id="model" name="model" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="carYear" class="form-label">Year</label>
                        <input type="number" id="carYear" name="carYear" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="plateNumber" class="form-label">Plate Number</label>
                        <input type="number" id="plateNumber" name="plateNumber" class="form-control">
                    </div>
                </div>
                <button type="submit" class="btn btn-secondary">SUBMIT</button>
            </form>
        </div>
    </section>